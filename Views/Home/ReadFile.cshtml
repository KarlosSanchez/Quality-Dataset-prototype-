@{
    ViewBag.Title = "Contenido del Archivo";
}

<h2>Contenido del Archivo</h2>

@if (ViewBag.FileContent != null)
{
    <h3>@ViewBag.FilePath</h3>
    <pre>@ViewBag.FileContent</pre>
}
else if (ViewBag.Error != null)
{
    <p style="color:red;">@ViewBag.Error</p>
}
